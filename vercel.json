{
  "buildCommand": "NODE_OPTIONS=--max-old-space-size=4096 next build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_DISABLE_ESLINT": "1",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "build": {
    "env": {
      "NEXT_WEBPACK_DISABLE_STRICT_MODE": "1"
    }
  }
} 