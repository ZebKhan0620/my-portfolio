{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Backend API for portfolio website",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prod:build": "npm run build",
    "prod:start": "SET NODE_ENV=production && node dist/server.js",
    "prod:prepare": "npm run build && mkdir -p logs data",
    "clean": "cleanup.bat"
  },
  "keywords": [
    "portfolio",
    "api",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/sequelize": "^4.28.20",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "mysql2": "^3.9.1",
    "nodemailer": "^6.9.9",
    "sequelize": "^6.37.1",
    "sqlite3": "^5.1.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  }
}
